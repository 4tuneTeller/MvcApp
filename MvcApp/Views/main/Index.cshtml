
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Адресная книга</title>
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <h3>Контакты</h3>
        @if (ViewBag.Message != null)
        {
            <div>
                <span>@ViewBag.Message</span>
            </div>
        }
        <table>
            <tr>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Эл. почта</th>
                <th>Должность</th>
            </tr>
            @if (Model != null) {
                foreach (MvcApp.Controllers.MainController.GroupedContacts department in Model)
                {
                    <tr class="department-row">
                        <td colspan="4">@department.Group</td>
                    </tr>
                    foreach (var contact in department.Contacts)
                    {
                    <tr>
                        <td>@contact.FullName</td>
                        <td>@contact.PhoneNumber</td>
                        <td>@contact.EMail</td>
                        <td>@contact.Position</td>
                    </tr>
                    }
                }
            }
        </table>
    </div>

</body>
</html>